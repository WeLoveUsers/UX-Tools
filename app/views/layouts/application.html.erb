<!DOCTYPE html>
<html>
  <head>
    <title>UxQuestionnaires</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui fixed main menu">
        <a href="<%= root_path %>" class="item"><img alt="We Love Users" src="<%= image_path('we-love-users-logo(small).png')%>"></a>
        <% if user_signed_in? %>
        <div class="ui simple dropdown right item">
          <i class="user icon"></i> <%= current_user.email %> <i class="dropdown icon"></i>
          <div class="menu">
            <div class="item">
              <%= link_to 'Mon compte', edit_user_registration_path %>
            </div>
            <div class="item">
              <%= link_to "Déconnexion", destroy_user_session_path, method: :delete  %>
            </div>
          </div>
        </div>
        <% else %>
        <div class="right menu">
          <div class="item">
            <%= link_to "Connexion", new_user_session_path, :class => 'ui button'  %>
          </div>
          <div class="item">
            <%= link_to "Inscription", new_user_registration_path, :class => 'ui primary button'  %>
          </div>
        </div>
        <% end %>
    </div>

    <div class="content">
      <% if notice %>

        <div class="ui success message container">
          <i class="close icon"></i>
          <%= notice %>
        </div>

      <% end %>
      <% if alert %>

        <div class="ui error message container">
          <i class="close icon"></i>
          <%= alert %>
        </div>

      <% end %>

      <%= yield %>
    </div>

    <div class="ui vertical footer segment">
      <div class="ui center aligned container">
        <p><img class="logo" src="<%= image_path('we-love-users-logo(small).png')%>"></p>
        <p>© 2016 - We Love Users</p>
      </div>
    </div>

  </body>
</html>
