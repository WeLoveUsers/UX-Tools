<div class="ui middle aligned center aligned grid">
  <div class="six wide left aligned column">
    <h2 class="ui header"><%= t('.sign_in') %></h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "ui large form"}) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, placeholder: "Adresse e-mail"  %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="ui checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end %>
        <%= f.submit t('.sign_in'), :class => "ui fluid large primary submit button" %>
      </div>

      <div class="ui error message"></div>
    <% end %>

    <div class="ui message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
