<% if @project.end_date >= Date.today %>
  <% if !@showForm %>
    <%= render @project.questionnaire_template, project: @project %>
  <% else %>
    <%= render @form, project: @project, response: @response %>
  <% end %>
<% else %>
  <div class="ui text container">
    <div class="ui segment">
    	<h2>Fini !</h2>
      <p>Cette évaluation est terminée (date de fin : <%= @project.end_date %>)</p>
    </div>
  </div>  
<% end %>
