<div class="ui top attached segment">
  <div class="ui statistics">
    <div class="statistic">
      <div class="label">Réponses</div>
      <div class="value"><%= @project.responses.count %></div>
    </div>
    <div class="statistic">
      <div class="label">Moyenne QP</div>
      <div class="value"><%= @project.attrakdiff_average_scores[:QP][:mean] %></div>
      <div class="tiny label">σ = <%= @project.attrakdiff_average_scores[:QP][:sd] %></div>
      <div class="tiny label">IC = <span id="confidence_value_QP"><%= @project.attrakdiff_average_scores[:QP][:ci_95] %></span></div>
    </div>
    <div class="statistic">
      <div class="label">Moyenne QHS</div>
      <div class="value"><%= @project.attrakdiff_average_scores[:QHS][:mean] %></div>
      <div class="tiny label">σ = <%= @project.attrakdiff_average_scores[:QHS][:sd] %></div>
      <div class="tiny label">IC = <span id="confidence_value_QHS"><%= @project.attrakdiff_average_scores[:QHS][:ci_95] %></span></div>
    </div>
    <div class="statistic">
      <div class="label">Moyenne QHI</div>
      <div class="value"><%= @project.attrakdiff_average_scores[:QHI][:mean] %></div>
      <div class="tiny label">σ = <%= @project.attrakdiff_average_scores[:QHI][:sd] %></div>
      <div class="tiny label">IC = <span id="confidence_value_QHI"><%= @project.attrakdiff_average_scores[:QHI][:ci_95] %></span></div>
    </div>
    <div class="statistic">
      <div class="label">Moyenne ATT</div>
      <div class="value"><%= @project.attrakdiff_average_scores[:ATT][:mean] %></div>
      <div class="tiny label">σ = <%= @project.attrakdiff_average_scores[:ATT][:sd] %></div>
      <div class="tiny label">IC = <span id="confidence_value_ATT"><%= @project.attrakdiff_average_scores[:ATT][:ci_95] %></span></div>
    </div>
  </div>
</div>

<div class="ui bottom attached message">
    Afficher les intervalles de confiance (IC) à : <div class="ui selection confidence compact dropdown" data-target="confidence_value">
      <div class="text">95%</div>
      <i class="dropdown icon"></i>
      <div class="menu">
        <div class="item" data-value="<%= @project.attrakdiff_average_scores[:QP][:ci_90] %>_<%= @project.attrakdiff_average_scores[:QHS][:ci_90] %>_<%= @project.attrakdiff_average_scores[:QHI][:ci_90] %>_<%= @project.attrakdiff_average_scores[:ATT][:ci_90] %>" data-text="90%">90%</div>
        <div class="item" data-value="<%= @project.attrakdiff_average_scores[:QP][:ci_95] %>_<%= @project.attrakdiff_average_scores[:QHS][:ci_95] %>_<%= @project.attrakdiff_average_scores[:QHI][:ci_95] %>_<%= @project.attrakdiff_average_scores[:ATT][:ci_95] %>" data-text="95%">95%</div>
        <div class="item" data-value="<%= @project.attrakdiff_average_scores[:QP][:ci_99] %>_<%= @project.attrakdiff_average_scores[:QHS][:ci_99] %>_<%= @project.attrakdiff_average_scores[:QHI][:ci_99] %>_<%= @project.attrakdiff_average_scores[:ATT][:ci_99] %>" data-text="99%">99%</div>
      </div>
    </div>
</div>

<div class="ui grid container segment">
  <div class="ui eight wide column">
      <%= attrak_diff_average_chart_for(@project) %>
  </div>
  <div class="ui eight wide column">
      <%= attrak_diff_portfolio_chart_for(@project) %>
  </div>
  <div class="ui ten wide column">
      <%= attrak_diff_word_pair_chart_for(@project) %>
  </div>
</div>
